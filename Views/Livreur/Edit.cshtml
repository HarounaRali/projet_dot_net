@model SuiviLivraison.Models.Colis
@{
    ViewData["Title"] = "Mettre à jour le colis";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-6">
            <!-- Header -->
            <div class="text-center mb-4">
                <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex p-3 mb-3">
                    <i class="fas fa-edit fa-2x text-primary"></i>
                </div>
                <h1 class="display-6 fw-bold mb-2">Mettre à jour le colis</h1>
                <p class="text-muted">Modifiez les informations de livraison</p>
            </div>

            <!-- Formulaire -->
            <div class="card border-0 shadow-lg">
                <div class="card-body p-4 p-lg-5">
                    <form asp-action="Edit" method="post" id="editColisForm">
                        <input type="hidden" asp-for="Id" />
                        
                        <!-- Statut -->
                        <div class="form-floating mb-4">
                            <select asp-for="Statut" class="form-select" id="statutSelect">
                                <option value="En attente">En attente</option>
                                <option value="En cours">En cours</option>
                                <option value="Livré">Livré</option>
                                <option value="Annulé">Annulé</option>
                            </select>
                            <label asp-for="Statut" for="statutSelect">
                                <i class="fas fa-tasks me-2"></i>Statut du colis *
                            </label>
                            <span asp-validation-for="Statut" class="text-danger small"></span>
                        </div>

                        <!-- Coordonnées -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h5 class="fw-bold mb-3">
                                    <i class="fas fa-map-marker-alt text-primary me-2"></i>
                                    Position actuelle
                                </h5>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Latitude" class="form-control" id="latitudeInput" placeholder="Latitude" />
                                    <label asp-for="Latitude" for="latitudeInput">
                                        <i class="fas fa-globe me-2"></i>Latitude
                                    </label>
                                    <span asp-validation-for="Latitude" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Longitude" class="form-control" id="longitudeInput" placeholder="Longitude" />
                                    <label asp-for="Longitude" for="longitudeInput">
                                        <i class="fas fa-globe me-2"></i>Longitude
                                    </label>
                                    <span asp-validation-for="Longitude" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Information -->
                        <div class="alert alert-info border-0 shadow-sm mb-4">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-info-circle fa-2x text-info"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h6 class="alert-heading fw-bold">Information</h6>
                                    <p class="mb-0">
                                        Mettez à jour le statut et la position du colis pour informer le client de l'avancement de sa livraison.
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- Actions -->
                        <div class="d-flex flex-column flex-sm-row gap-3 justify-content-between">
                            <a asp-action="MesColisALivrer" class="btn btn-outline-secondary btn-lg">
                                <i class="fas fa-arrow-left me-2"></i>
                                Retour
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg" id="submitBtn">
                                <i class="fas fa-save me-2"></i>
                                Enregistrer
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 