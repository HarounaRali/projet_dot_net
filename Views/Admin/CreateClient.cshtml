@model CreateClientViewModel
@{
    ViewData["Title"] = "Créer un Client";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-user-plus"></i> Créer un nouveau client
                    </h3>
                </div>
                <div class="card-body">
                    <form asp-action="CreateClient" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Nom" class="form-label">Nom complet *</label>
                                    <input asp-for="Nom" class="form-control" placeholder="Nom et prénom du client" />
                                    <span asp-validation-for="Nom" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Telephone" class="form-label">Téléphone *</label>
                                    <input asp-for="Telephone" class="form-control" placeholder="06 12 34 56 78" />
                                    <span asp-validation-for="Telephone" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Adresse email *</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="client@example.com" />
                            <div class="form-text">Cette adresse servira de nom d'utilisateur pour la connexion.</div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Password" class="form-label">Mot de passe *</label>
                                    <input asp-for="Password" type="password" class="form-control" placeholder="Mot de passe" />
                                    <div class="form-text">Minimum 6 caractères</div>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ConfirmPassword" class="form-label">Confirmer le mot de passe *</label>
                                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirmer le mot de passe" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            <strong>Information :</strong> Un compte utilisateur sera automatiquement créé avec le rôle "Client". 
                            Le client pourra se connecter immédiatement avec l'email et le mot de passe fournis.
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Clients" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Retour à la liste
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Créer le client
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 