@{
    ViewData["Title"] = "Démonstration";
}

<div class="container-fluid py-5">
    <!-- Header -->
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold mb-3">Démonstration des Fonctionnalités</h1>
        <p class="lead text-muted">Découvrez toutes les fonctionnalités avancées de Suivi Livraison</p>
    </div>

    <!-- Fonctionnalités principales -->
    <div class="row g-4 mb-5">
        <div class="col-lg-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-truck fa-3x text-primary"></i>
                    </div>
                    <h4 class="fw-bold mb-3">Suivi en Temps Réel</h4>
                    <p class="text-muted mb-4">
                        Suivez vos colis en temps réel avec géolocalisation GPS et notifications instantanées.
                    </p>
                    <div class="d-grid">
                        <a href="/Colis/Create" class="btn btn-outline-primary">
                            <i class="fas fa-plus me-2"></i>
                            Créer un colis
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-bell fa-3x text-warning"></i>
                    </div>
                    <h4 class="fw-bold mb-3">Notifications Avancées</h4>
                    <p class="text-muted mb-4">
                        Système de notifications intelligent avec différents types d'alertes et historique complet.
                    </p>
                    <div class="d-grid">
                        <a href="/Colis/Notifications" class="btn btn-outline-warning">
                            <i class="fas fa-bell me-2"></i>
                            Voir les notifications
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-mobile-alt fa-3x text-dark"></i>
                    </div>
                    <h4 class="fw-bold mb-3">Interface Responsive</h4>
                    <p class="text-muted mb-4">
                        Interface moderne et responsive accessible sur tous les appareils avec design adaptatif.
                    </p>
                    <div class="d-grid">
                        <a href="/Identity/Account/Register" class="btn btn-outline-dark">
                            <i class="fas fa-rocket me-2"></i>
                            Commencer
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Détails des fonctionnalités -->
    <div class="row g-4">
        <!-- Notifications -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-warning text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-bell me-2"></i>
                        Système de Notifications Avancé
                    </h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            Notifications en temps réel
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            Différents types de notifications (colis, facturation)
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            Marquage comme lu/non lu
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            Historique complet des notifications
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            Interface responsive avec badges
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Facturation -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-credit-card me-2"></i>
                        Système de Facturation
                    </h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            Tarification flexible par distance
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            Calcul automatique des coûts
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            Gestion des tarifs d'urgence
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            Historique des facturations
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            Rapports financiers détaillés
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Interface -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-palette me-2"></i>
                        Interface Moderne
                    </h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            Design responsive et moderne
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            Navigation intuitive
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            Cartes et badges visuels
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            Animations et transitions fluides
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            Compatible mobile et desktop
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Géolocalisation -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-map-marker-alt me-2"></i>
                        Géolocalisation GPS
                    </h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            Suivi GPS en temps réel
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            Cartes interactives
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            Calcul automatique des distances
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            Points de départ et d'arrivée
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            Optimisation des trajets
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Call to Action -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="card bg-gradient-success text-white text-center">
                <div class="card-body py-5">
                    <h3 class="fw-bold mb-3">Prêt à tester ces fonctionnalités ?</h3>
                    <p class="lead mb-4">
                        Connectez-vous pour accéder à toutes ces fonctionnalités avancées
                    </p>
                    <div class="d-flex justify-content-center gap-3">
                        <a href="/Identity/Account/Login" class="btn btn-light btn-lg">
                            <i class="fas fa-sign-in-alt me-2"></i>
                            Se connecter
                        </a>
                        <a href="/Identity/Account/Register" class="btn btn-outline-light btn-lg">
                            <i class="fas fa-user-plus me-2"></i>
                            S'inscrire
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
    
    .bg-gradient-success {
        background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
    }
    
    .feature-icon {
        transition: transform 0.3s ease;
    }
    
    .card:hover .feature-icon {
        transform: scale(1.1);
    }
    
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.15) !important;
    }
    
    .btn-lg {
        padding: 12px 30px;
        font-size: 1.1rem;
        border-radius: 50px;
    }
    
    @@media (max-width: 768px) {
        .d-flex.justify-content-center {
            flex-direction: column;
            align-items: center;
        }
        
        .d-flex.justify-content-center .btn {
            margin-bottom: 1rem;
        }
    }
</style> 