@{
    ViewData["Title"] = "Accueil - Suivi Livraison";
}

<!-- Hero Section -->
<div class="hero-section">
    <div class="container">
        <div class="row align-items-center min-vh-100">
            <div class="col-lg-6">
                <div class="hero-content">
                    <h1 class="display-4 fw-bold text-primary mb-4">
                        <i class="fas fa-shipping-fast me-3"></i>
                        Suivi Livraison
                    </h1>
                    <p class="lead mb-4">
                        La solution complète pour gérer et suivre vos livraisons en temps réel. 
                        Simplifiez vos opérations logistiques avec notre plateforme intuitive.
                    </p>
                    <div class="hero-buttons">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <div class="welcome-message">
                                <h4 class="text-white mb-3">Bienvenue @User.Identity.Name !</h4>
                                <p class="text-white-50">Accédez à votre espace personnel</p>
                            </div>
                        }
                        else
                        {
                            <a href="/Identity/Account/Login" class="btn btn-primary btn-lg me-3">
                                <i class="fas fa-sign-in-alt me-2"></i>
                                Se connecter
                            </a>
                            <a href="/Identity/Account/Register" class="btn btn-outline-primary btn-lg">
                                <i class="fas fa-user-plus me-2"></i>
                                S'inscrire
                            </a>
                        }
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-image text-center">
                    <img src="https://cdn-icons-png.flaticon.com/512/3137/3137064.png" 
                         alt="Livraison" class="img-fluid" style="max-width: 400px;">
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<section class="features-section py-5">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-12">
                <h2 class="display-5 fw-bold mb-3">Pourquoi choisir Suivi Livraison ?</h2>
                <p class="lead text-muted">Découvrez les avantages de notre plateforme</p>
            </div>
        </div>
        
        <div class="row g-4">
            <div class="col-md-4">
                <div class="feature-card text-center p-4 h-100">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-map-marker-alt fa-3x text-primary"></i>
                    </div>
                    <h4 class="fw-bold mb-3">Suivi en Temps Réel</h4>
                    <p class="text-muted">
                        Suivez vos colis en temps réel avec des mises à jour instantanées 
                        et une géolocalisation précise.
                    </p>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="feature-card text-center p-4 h-100">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-users fa-3x text-success"></i>
                    </div>
                    <h4 class="fw-bold mb-3">Gestion Multi-utilisateurs</h4>
                    <p class="text-muted">
                        Gérez vos clients, livreurs et administrateurs avec des rôles 
                        et permissions personnalisables.
                    </p>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="feature-card text-center p-4 h-100">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-chart-line fa-3x text-info"></i>
                    </div>
                    <h4 class="fw-bold mb-3">Statistiques Avancées</h4>
                    <p class="text-muted">
                        Analysez vos performances avec des tableaux de bord détaillés 
                        et des rapports personnalisés.
                    </p>
                </div>
            </div>
        </div>
        
        <!-- Nouvelles fonctionnalités -->
        <div class="row g-4 mt-4">
            <div class="col-md-3">
                <div class="feature-card text-center p-4 h-100">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-bell fa-3x text-warning"></i>
                    </div>
                    <h5 class="fw-bold mb-3">Notifications Intelligentes</h5>
                    <p class="text-muted small">
                        Recevez des notifications en temps réel sur l'état de vos livraisons.
                    </p>
                </div>
            </div>
            
            <div class="col-md-3">
                <div class="feature-card text-center p-4 h-100">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-credit-card fa-3x text-danger"></i>
                    </div>
                    <h5 class="fw-bold mb-3">Facturation Automatique</h5>
                    <p class="text-muted small">
                        Système de tarification flexible avec facturation automatique.
                    </p>
                </div>
            </div>
            

            
            <div class="col-md-3">
                <div class="feature-card text-center p-4 h-100">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-mobile-alt fa-3x text-dark"></i>
                    </div>
                    <h5 class="fw-bold mb-3">Interface Responsive</h5>
                    <p class="text-muted small">
                        Interface moderne et responsive accessible sur tous les appareils.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- How It Works Section -->
<section class="how-it-works-section py-5 bg-light">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-12">
                <h2 class="display-5 fw-bold mb-3">Comment ça marche ?</h2>
                <p class="lead text-muted">En 3 étapes simples</p>
            </div>
        </div>
        
        <div class="row g-4">
            <div class="col-md-4">
                <div class="step-card text-center p-4">
                    <div class="step-number mb-3">
                        <span class="badge bg-primary rounded-circle p-3">1</span>
                    </div>
                    <h5 class="fw-bold mb-3">Créer un compte</h5>
                    <p class="text-muted">
                        Inscrivez-vous rapidement et choisissez votre rôle 
                        (Client, Livreur ou Admin).
                    </p>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="step-card text-center p-4">
                    <div class="step-number mb-3">
                        <span class="badge bg-primary rounded-circle p-3">2</span>
                    </div>
                    <h5 class="fw-bold mb-3">Gérer vos livraisons</h5>
                    <p class="text-muted">
                        Créez et suivez vos colis, assignez des livreurs 
                        et gérez vos opérations.
                    </p>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="step-card text-center p-4">
                    <div class="step-number mb-3">
                        <span class="badge bg-primary rounded-circle p-3">3</span>
                    </div>
                    <h5 class="fw-bold mb-3">Suivre en temps réel</h5>
                    <p class="text-muted">
                        Recevez des notifications et suivez l'avancement 
                        de vos livraisons en temps réel.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="cta-section py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <h2 class="display-6 fw-bold mb-4">Bienvenue sur votre tableau de bord !</h2>
                    <p class="lead mb-4">
                        Découvrez toutes les nouvelles fonctionnalités disponibles pour optimiser vos livraisons.
                    </p>
                    <div class="cta-buttons">
                        @if (User.IsInRole("Client"))
                        {
                            <a href="/Colis/Create" class="btn btn-primary btn-lg me-3">
                                <i class="fas fa-plus me-2"></i>
                                Nouveau colis
                            </a>
                            <a href="/Colis/MesColis" class="btn btn-outline-primary btn-lg me-3">
                                <i class="fas fa-box me-2"></i>
                                Mes colis
                            </a>

                        }
                        @if (User.IsInRole("Livreur"))
                        {
                            <a href="/Livreur/MesColisALivrer" class="btn btn-primary btn-lg me-3">
                                <i class="fas fa-truck me-2"></i>
                                Mes livraisons
                            </a>
                            <a href="/Livreur/ColisDisponibles" class="btn btn-outline-primary btn-lg">
                                <i class="fas fa-list me-2"></i>
                                Colis disponibles
                            </a>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <a href="/Admin/Dashboard" class="btn btn-primary btn-lg me-3">
                                <i class="fas fa-tachometer-alt me-2"></i>
                                Dashboard
                            </a>
                            <a href="/Admin/Statistiques" class="btn btn-outline-primary btn-lg">
                                <i class="fas fa-chart-bar me-2"></i>
                                Statistiques
                            </a>
                        }
                    </div>
                }
                else
                {
                    <h2 class="display-6 fw-bold mb-4">Prêt à commencer ?</h2>
                    <p class="lead mb-4">
                        Rejoignez des milliers d'utilisateurs qui font confiance à Suivi Livraison 
                        pour leurs opérations logistiques.
                    </p>
                    <div class="cta-buttons">
                        <a href="/Identity/Account/Register" class="btn btn-primary btn-lg me-3">
                            <i class="fas fa-rocket me-2"></i>
                            Commencer maintenant
                        </a>
                        <a href="/Identity/Account/Login" class="btn btn-outline-primary btn-lg">
                            <i class="fas fa-sign-in-alt me-2"></i>
                            Se connecter
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

<style>
    .hero-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        position: relative;
        overflow: hidden;
    }
    
    .hero-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 1000"><polygon fill="rgba(255,255,255,0.1)" points="0,1000 1000,0 1000,1000"/></svg>');
        background-size: cover;
    }
    
    .hero-content {
        position: relative;
        z-index: 2;
    }
    
    .hero-image {
        position: relative;
        z-index: 2;
    }
    
    .feature-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .feature-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.15);
    }
    
    .step-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        transition: transform 0.3s ease;
    }
    
    .step-card:hover {
        transform: translateY(-3px);
    }
    
    .step-number .badge {
        width: 60px;
        height: 60px;
        font-size: 1.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .cta-section {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        color: white;
    }
    
    .btn-lg {
        padding: 12px 30px;
        font-size: 1.1rem;
        border-radius: 50px;
    }
    
    .btn-outline-primary {
        border-color: white;
        color: white;
    }
    
    .btn-outline-primary:hover {
        background-color: white;
        color: #667eea;
    }
    
    @@media (max-width: 768px) {
        .hero-buttons .btn {
            display: block;
            width: 100%;
            margin-bottom: 1rem;
        }
        
        .hero-buttons .btn:last-child {
            margin-bottom: 0;
        }
    }
</style>
